<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/historico"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="10sp"
        android:gravity="right"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonx"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getOperator"
            android:text="*"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonmenos"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getOperator"
            android:text="-"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonmais"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getOperator"
            android:text="+"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="181dp"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getValue"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonce"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="clear"
            android:text="CE"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttondiv"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_marginHorizontal="5sp"
            android:layout_marginVertical="2.5sp"
            android:layout_weight="1"
            android:width="30dp"
            android:height="100dp"
            android:backgroundTint="#505050"
            android:onClick="getOperator"
            android:text="/" />

    </LinearLayout>

    <Button
        android:id="@+id/buttoncalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:height="100sp"
        android:onClick="calc"
        android:text="calcular" />

</LinearLayout>